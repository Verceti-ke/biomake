# -*- makefile-gmake -*-

%.bar: %.foo
	perl -pe 'tr/a-z/A-Z/' $< > $@

$A.baz: $A.bar
	echo "Baz!" >$@
	cat $< >>$@
	echo "I said Baz!" >> $@

$A.bo: $A.bar
	echo "Bo!" >$@
	cat $< >>$@
	echo "Did you hear me say Bo!" >> $@

$A.$B.$C.foo:
	@echo c= $C b= $B a= $A >$@

$A.$B.foo:
	echo b= $B a= $A >$@

$A.$B.$C.$D.$E: $A.$B.$C.baz $D.$E.bo
	cat $^ >$@

$A-$B-$C-$D { QsubArgs = "--echo testing test_file" } :
	cat test_file >$@
	echo $A $B $C $D >>$@

$A-$B,$C-$D { QsubHeader = "echo testing test_file2 >test_file2" } :
	cat test_file2 >$@
	echo $A $B $C $D >>$@

$A_$B_$C_$D_$E_$F { QsubHeaderFile = "test_header_file" } :
	cat test_file3 >$@
	echo $A $B $C $D $E $F >>$@

slurmtest: slurmhello slurmworld
	cat $^ >$@
	rm $^

slurmhello:
	echo hello >$@

slurmworld:
	echo world >$@
